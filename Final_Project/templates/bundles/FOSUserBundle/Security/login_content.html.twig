{% trans_default_domain 'FOSUserBundle' %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="sidenav">
         <div class="login-main-text">
            <h2>Bienvenido!<br> Simulador Ser Bachiller</h2>
            <p>Regístrate para poder acceder al simulador.</p>
         </div>
      </div>
      <div class="main">
         <div class="col-md-6 col-sm-12">
            <div class="login-form">

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

<div class="form-group">
   <label for="username">{{ 'security.login.username'|trans }}</label>
    <input type="text" class="form-control" placeholder="Ingrese nombre de usuario..." id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
</div>
<div class="form-group">
    <label for="password">{{ 'security.login.password'|trans }}</label>
    <input type="password" class="form-control" placeholder="Ingrese su contraseña..." id="password" name="_password" required="required" autocomplete="current-password" />
</div>
<div class="form-group">
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">Recordar Contraseña</label>
</div>
    <button type="submit" class="btn btn-black" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}">Iniciar Sesión</button>
    <button onclick="location.href='../register'" type="submit" class="btn btn-secondary">Registrarse</button>
</form>